<h1>List Tax Rates</h1>

<table>
  <tr>
    <th>Year</th>
    <th>Filing category</th>
    <th>Marginal rate</th>
    <th>Lower limit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tax_rates.each do |tax_rate| %>
  <tr>
    <td><%= tax_rate.year %></td>
    <td><%= tax_rate.filing_category.name %></td>
    <td><%= tax_rate.marginal_rate %></td>
    <td><%= tax_rate.lower_limit %></td>
    <td><%= link_to 'Show', tax_rate %></td>
    <td><%= link_to 'Edit', edit_tax_rate_path(tax_rate) %></td>
    <td><%= link_to 'Destroy', tax_rate, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

